mixin bioicon
  div(class="transition flex-none w-6 mg:w-10 lg:w-14 rounded-full p-1 lg:p-2 -rotate-45")&attributes(attributes)
    div(class="transition rotate-45")
      block

mixin bioitem
  div(class="flex flex-row items-center gap-2 lg:gap-4 text-base lg:text-xl group")&attributes(attributes)
    block

mixin biotext
  div(class="flex-none inline-block text-bold text-base md:text-lg lg:text-2xl")
    block

mixin bio
  section(id="bio", class="flex flex-col items-start gap-2 lg:gap-4")
    block

doctype html
html(lang="en")
  head
    link(rel="stylesheet", href="style.css")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Joe Harrison
  body(class="dark:bg-black bg-white")
    main(class="min-h-screen min-w-screen box-border pt-8 dark:text-white selection:text-white selection:bg-black dark:selection:text-black dark:selection:bg-white")   
      div(id="rule" class="w-full h-1 bg-gradient-to-r from-indigo-500 dark:from-indigo-400 via-yellow-500 dark:via-yellow-400 to-indigo-500 dark:to-indigo-400 bg-[size:200%]")
      header(class="px-4 pb-4 font-bold")
        div(class="inline-flex gap-2 content-end group")
          h1(class="text-6xl") Joe Harrison
          div(class="relative w-12 transition duration-500 opacity-0 group-hover:opacity-100")
            div(class="w-12 absolute bottom-0 text-blue-400", title="This website is verified because it's subscribed to HTTP Blue.")
              include ../node_modules/heroicons/24/solid/check-badge.svg
        h2(class="text-4xl") Functional Programmer, Software Engineer, Train Nerd
      div(class="px-4 pb-4")
        +bio
          a(title="Pronouns" href="https://en.pronouns.page/are/he/him", class="hover:underline")
            +bioitem
              +bioicon(class="bg-gradient-to-r from-orange-600 to-green-500 group-hover:to-green-400")
                include ../node_modules/heroicons/24/outline/tag.svg
              +biotext
                span he/him
          a(title="Location" href="https://www.openstreetmap.org/relation/65606", class="hover:underline")
            +bioitem
              +bioicon(class="bg-gradient-to-r from-orange-600 to-orange-500 group-hover:to-orange-400")
                include ../node_modules/heroicons/24/outline/map-pin.svg
              +biotext
                span London, UK
          a(title="Email" href="mailto:joe@sigwinch.uk", class="hover:underline") 
            +bioitem
              +bioicon(class="bg-gradient-to-r from-blue-600 to-blue-500 group-hover:to-blue-400")
                include ../node_modules/heroicons/24/outline/at-symbol.svg
              +biotext
                span joe@sigwinch.uk
          a(title="GitHub" href="https://github.com/sigwinch28", class="hover:underline") 
            +bioitem
              +bioicon(class="bg-gradient-to-r from-yellow-600 to-yellow-500 group-hover:to-yellow-400")
                include ../node_modules/heroicons/24/outline/code-bracket.svg
              +biotext
                span sigwinch28
          a(title="PGP Key" href="https://keys.openpgp.org/search?q=joe@sigwinch.uk", class="hover:underline") 
            +bioitem
              +bioicon(class="bg-gradient-to-r from-pink-600 to-pink-500 group-hover:to-pink-400")
                include ../node_modules/heroicons/24/outline/key.svg
              +biotext
                span 62F9 CC13 8DD7 1788
          a(title="Disabilities" href="https://en.wikipedia.org/wiki/Color_blindness#Deuteranopia", class="hover:underline") 
            +bioitem
              +bioicon(class="bg-gradient-to-r from-red-600 to-red-500 group-hover:to-red-400")
                include ../node_modules/heroicons/24/outline/eye-slash.svg
              +biotext
                span Deuteranope
          +bioitem(title="Qualifications")
            +bioicon(class="bg-gradient-to-r from-fuchsia-600 to-fuchsia-500 group-hover:to-fuchsia-400")
              include ../node_modules/heroicons/24/outline/academic-cap.svg
            +biotext
              span PhD &amp; BSc in Computer Science, University of Kent

    footer(class="bg-black dark:bg-white text-white dark:text-black selection:text-black selection:bg-white dark:selection:text-white dark:selection:bg-black p-2 lg:p-4 space-y-2")
